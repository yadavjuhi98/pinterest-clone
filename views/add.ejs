
<%- include('partials/header') %>

  <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1 class="text-2xl pb-5">Create a new post</h1>
        <hr class="opacity-10">
        <form action="/createpost" method="post" class="mt-10" enctype="multipart/form-data">
            <input  class="text-white block w-1/3 px-3 py-2" type="file" name="postimage" enctype="multipart/form-data">
            <input  class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md"type="text" placeholder="title" name="title">
            <textarea class="text-black block w-1/3 px-3 py-2 border-2 mt-4 rounded-md" type="text" name="description" placeholder="description"></textarea>
            <input class="text-white block w-1/3 px-3 py-2 border-0 cursor-pointer mt-6 rounded-md bg-red-800" value="Create Post" type="submit">
        </form>
  </div>

<%- include('partials/footer') %>

 
